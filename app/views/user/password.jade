extends ../layout
block content
 div.container
  div.col-sm-6.col-sm-offset-3 
   h3  
     span.fa.fa-sign-in  #{language.index.password} 
   form(action='#', method="post")
       input(type="hidden", name="id", value=user.id)
   
       div.form-group
          label #{language.password.password}
          input.form-control(type="password", name="password")
       
       div.form-group
          label #{language.password.confirmPassword}
          input.form-control(type="password", name="confirmpassword")   

        button.buttonsubmit(style="float: right; margin-left:2%", type="submit") #{language.password.save}
